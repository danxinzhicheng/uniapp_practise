
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.logo {
	height: 200rpx;
	width: 200rpx;
	/* margin-top: 200rpx;
	margin-bottom: 50rpx; */
}
.text-area {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-left: 20rpx;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
}
.view-box {
	background-color: #007AFF;
	width: 200rpx;
	height: 200rpx;
	color: #09BB07;
	margin: 100rpx;
}
.box {
	width: 100%;
	height: 500rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	border: 1rpx solid #007AFF;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.box-item{
	background: #2C405A;
	color: #FFFFFF;
	width: 200rpx;
	font-size: 30rpx;
	font-weight: bold;
	text-align: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.box-item:nth-of-type(odd){
}
.box-item:nth-of-type(even){
	background: #09BB07;
}
.box-item:nth-of-type(1){
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.box-item:nth-of-type(2){
	-webkit-box-flex: 2;
	-webkit-flex: 2;
	        flex: 2;
	-webkit-align-self: flex-end;
	        align-self: flex-end;
}
	

